<style>
    /* navigation bar*/
nav{
    position: relative;
    height: 10vh;
    width: 100%;
    background: #636c85;
    box-shadow: 13px 13px 20px #1a181a;
    z-index: 1;
}
  .nav-links{
    display: flex;
    list-style: none;
    width: 100%;   
    justify-content: space-around;
    align-items: center;
    margin-left: auto;
    }
  .nav-links li a{
    color: white;
    text-decoration: none;
    font-size: 16px;
  }
  .nav-links  li {
    color: white;
    margin-top : 20px;
    text-decoration: none;
    font-size: 16px;
  }
  @media screen and (max-width:700px){
    .line{
        width: 30px;
        height: 3px;
        background: white;
        margin: 5px;
}
    nav{
       position: relative;
       z-index: 1;
        
    }
    .drops{
        position: absolute;
        cursor: pointer;
        right: 5%;
        top: 50%;
        transform: translate(-5%, -10%);
        z-index: 2;
    }
    .nav-links{
     position: fixed;
     background: #636c85;
     height: 100vh;
     width: 100%;
     flex-direction: column;
     clip-path: circle(100px at 90% -30%);
     -webkit-clip-path: circle(100px at 90% -10%);
     transition: all 1s ease-out;
     pointer-events: none;
     
 
   }
    .nav-links.open{
    clip-path: circle(1000px at 90% -10%);
    -webkit-clip-path: circle(1000px at 90% -10%);
    pointer-events: all;
   }  
   .nav-links li{
       opacity: 0;
   }
   .nav-links li a{
       font-size: 25px;
   }
   .nav-links li:nth-child(1){
 transition: all 0.5s ease 0.2;
   }
   .nav-links li:nth-child(2){
    transition: all 0.5s ease 0.4;
}
.nav-links li:nth-child(3){
    transition: all 0.5s ease 0.6;
}
.nav-links li:nth-child(4){
    transition: all 0.5s ease 0.8;
}
li.fade{
    opacity: 1;
}

}
  
</style>

<nav>
    <div class="drops" >
      <div class="line"></div>
      <div class="line"></div>
      <div class="line"></div>
    </div>
      
    <ul class="nav-links">
      <li><img src="/public/dist/images/flogo.png"  alt="Our LOGO" id="logo"></li>
      <li><a href="#">HOME</a></li>
      <li><a href="#">INTERIOR</a></li>
      <li><a href="#">AVAILABILITY</a></li>
      <li><a href="#">AMINITIES</a></li>
      <li><a href="#">CONTACT US</a></li>
      <li><a href="#">CALL US</a></li>
    </ul>
</nav>
<script type="text/javascript">
    const drops = document.querySelector(".drops");
    const navLinks = document.querySelector(".nav-links");
    const links = document.querySelectorAll(".nav-links li");
    
    drops.addEventListener("click", () =>{
        navLinks.classList.toggle("open");
        links.forEach(link=>{
            link.classList.toggle("fade");
        })
        
    });
    </script>