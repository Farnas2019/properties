<%- include ('./partials/header')%>
<%- include ('./partials/nav')%>
       <div class="container">
        <div class="row">
                <div class="col-md-6 col-sm-12 mt-3">
                    <di class="card">
                        <div class="card-header">
                            <div>Add Product</div> 
                            </div>
                        <div class="card-body">
                            <form action="/addproduct" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="productName">Location</label>
                                    <input type="text" name="name" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="productPrice">House Price</label>
                                    <input type="number" name="price" class="form-control">
                                </div>
                                    <div class="form-group">
                                    <label for="productAvailableQuantity">Specification</label>
                                    <input type="text" name="quantity" class="form-control">
                                </div>
                                    <div class="form-group">
                                    <label for="productColor">House Type</label> 
                                    <input type="text" name="location" class="form-control">
                                </div>
                                    <div class="form-group">
                                   <label for="productDetails">Details</label>
                                    <textarea name="details" cols="30" rows="10" class="form-control"></textarea>
                                </div>
                                    <div class="form-group">
                                    <label for="productName" > Product Image</label>
                                    <input type="file" name="image" class="form-control" multiple="multiple">
                                </div>
                            </div>
                            <div class="form-group">
                            <label for="productName" > Product Video</label>
                            <input type="file" name="video" class="form-control" >
                            </div>
                                    <div class="form-group">
                                   <button type="submit" class="btn btn-primary btn-lg">Insert</button> 
                                </div>
                                </form>
                        </div>
               <div class="col-md-6 col-sm-12"></div>
               </div>
               </div>
               <script src="/public/dist/bootstrap/js/bootstrap.min.js"></script>
               <%- include ('./partials/footer')%>